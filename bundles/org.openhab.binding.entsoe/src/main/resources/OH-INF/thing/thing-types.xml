	<channel-group-type id="group-price">
		<label>Day ahead prices</label>
		<description>These are the current prices.</description>
		<channels>
			<channel id="time" typeId="time-channel"/>
			<channel id="price" typeId="price-channel"/>
		</channels>
	</channel-group-type>

	<channel-type id="time-channel">
		<item-type>DateTime</item-type>
		<label>Time</label>
		<category>Time</category>
		<state readOnly="true" pattern="%1$tY.%1$tm.%1$td %1$tH:%1$tM"/>
	</channel-type>
